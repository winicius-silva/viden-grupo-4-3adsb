<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoCurso">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/viden_blue"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:src="@drawable/img_voltar"></ImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Meus Cursos"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="☰"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/viden_yellow"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:text="IMAGEM INDISPONIVEL"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="25dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Título Video"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="25sp">
                    </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Descrição vídeo Descrição vídeo Descrição vídeo Descrição vídeo Descrição vídeo Descrição vídeo Descrição vídeo Descrição vídeo Descrição vídeo Descrição vídeo Descrição vídeo Descrição vídeo Descrição vídeo Descrição vídeo Descrição vídeo"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="18dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:layout_width="100dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/viden_yellow"
                    android:text="Próximo"
                    android:textAllCaps="false" />

                <Button
                    android:layout_marginLeft="30dp"
                    android:layout_width="100dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/viden_yellow"
                    android:text="Ver trilha completa"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="28dp"
            android:paddingBottom="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viden©"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/>"
                android:textSize="35sp"
                android:textColor="@color/viden_yellow"
                android:textStyle="bold"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@color/viden_blue"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:src="@drawable/white_star">
            </ImageView>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:src="@drawable/white_search">
            </ImageView>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:src="@drawable/white_trophy">
            </ImageView>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:src="@drawable/white_user">
            </ImageView>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>